{
    "name": "@fluvio/client",
    "version": "5.0.0-alpha.1",
    "description": "Node.js binding for Fluvio distributed stream",
    "keywords": [
        "fluvio",
        "mq",
        "stream",
        "client"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/infinyon/fluvio-client-node.git"
    },
    "homepage": "https://fluvio.io",
    "author": "team@fluvio.io",
    "license": "Apache-2.0",
    "dependencies": {},
    "scripts": {
        "prettier": "npx prettier --write '{src,examples,test,demos}/**/*.{ts,js}'",
        "prettier:check": "npx prettier --check '{src,examples,test,demos}/**/*.{ts,js}'",
        "lint": "npx tslint -c tslint.json '{src,examples,test}/**/*.ts'",
        "nj": "nj-cli build -o ./native",
        "tsc": "npx tsc ./src/index.ts --outDir ./dist -d",
        "build:dev": "npm run nj && npm run build",
        "build": "rm -rf ./dist/ && npm run tsc",
        "postinstall": "npm run build",
        "docs": "npx typedoc --out docs ./src/index.ts --theme minimal",
        "test": "npm run build:dev && npx testyts"
    },
    "devDependencies": {
        "@types/node": "^14.11.2",
        "@types/uuid": "^8.3.0",
        "prettier": "^2.1.2",
        "testyts": "^1.0.3",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3",
        "uuid": "^8.3.0"
    }
}
